<a href="/messages/new">Post a message... It's FREE (for now)!</a>
<% @messages.each do |message| %>
  <div class="message">
    <p>
      <h3><a href="/messages/<%= message.id %>"><%= message.content %></a></h3>
      <a href="<%= message.url %>"><%= message.url %></a>
    </p>
    <p>  
      <small>(by: <%= message.author %>)</small>
    </p>
  </div>
<% end %>